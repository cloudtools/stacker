#!/usr/bin/python

import logging

LOG_FORMAT = ('[%(asctime)s] %(levelname)s %(name)s '
              '%(module)s(%(funcName)s):%(lineno)d - %(message)s')
TIME_FORMAT = '%Y/%m/%d %H:%M:%S %Z'

logging.basicConfig(format=LOG_FORMAT, time_format=TIME_FORMAT,
                    level=logging.DEBUG)

logging.getLogger('boto').setLevel(logging.INFO)

import yaml

from stacker.builder import StackBuilder

with open('conf/stack.yaml') as fd:
    config = yaml.load(fd)

builder = StackBuilder('us-east-1',
                       domain=config['default_config']['base_domain'],
                       mappings=config['mappings'])

#builder.build(config['stacks'])
